<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
          <form-bean name="loginForm" type="beans.LoginBean"/>
      </form-beans>
    <action-mappings>
        <action path="/login" type="actions.LoginAction" name="loginForm" scope="session">
            <forward name="bad-login" path="/WEB-INF/results/bad-login.jsp"/>
            <forward name="success" path="/WEB-INF/results/confirm.jsp"/>
        </action>
    </action-mappings>
</struts-config>